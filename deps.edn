{:paths ["src/java" "src/clojure" "resources"]
 :deps {cheshire/cheshire {:mvn/version "6.1.0"}
        com.hivemq/hivemq-mqtt-client {:mvn/version "1.3.10"}
        medley/medley {:mvn/version "1.4.0"}
        ch.qos.logback/logback-core {:mvn/version "1.5.20"}
        ch.qos.logback/logback-classic {:mvn/version "1.5.20"}
        org.clojure/core.async {:mvn/version "1.8.741"}
        org.slf4j/slf4j-api {:mvn/version "2.0.17"}
        org.scala-sbt.ipcsocket/ipcsocket {:mvn/version "1.6.3"}
        superstring/superstring {:mvn/version "3.2.1"}
        yogthos/config {:mvn/version "1.2.1"}}
 :aliases
 {;; Run with clj -T:build function-in-build
  :build {:deps {io.github.clojure/tools.build {:git/tag "v0.10.10" :git/sha "deedd62"}}
          :ns-default build}
  :dev {:paths ["src/java" "src/clojure" "dev" "dev-resources" "resources"]
        :jvm-opts ["-Dconfig=dev-config.edn"]}
  ;; Run with clj -M:run
  :run {:main-opts ["-m" "ezand.retro2mqtt.core"]}
  ;; Start REPL with clj -M:repl
  :repl {:extra-deps {nrepl/nrepl {:mvn/version "1.4.0"}}
         :main-opts ["-m" "nrepl.cmdline" "--interactive"]}}}
